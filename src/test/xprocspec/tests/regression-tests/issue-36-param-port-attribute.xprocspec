<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://www.daisy.org/ns/xprocspec/xprocspec.rng" type="application/xml" schematypens="http://relaxng.org/ns/structure/1.0"?>
<x:description xmlns:x="http://www.daisy.org/ns/xprocspec"
               xmlns:xs="http://www.w3.org/2001/XMLSchema"
               xmlns:p="http://www.w3.org/ns/xproc"
               xmlns:pipx="http://pipx.org/ns/pipx"
               script="../../steps/pipx.xpl">

    <x:documentation>Issue 36: port attribute is required on x:param but not in the documentation or schema</x:documentation>

    <x:scenario label="Passing in a parameter without specifying the port'" pending="">
        <x:call step="pipx:parameter">
            <x:param name="name" select="'value'" port="parameters"/>
            <x:option name="param-name" select="'name'"/>
        </x:call>

        <x:context label="the primary output port">
            <x:document type="port" port="result"/>
        </x:context>
        <x:expect label="should contain a param document with the attribute" type="compare">
            <x:document type="inline">
                <param name="name">value</param>
            </x:document>
        </x:expect>

    </x:scenario>

</x:description>